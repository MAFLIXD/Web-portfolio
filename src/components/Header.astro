---
import "../styles/global.css";
---
<header class="flex justify-center items-center py-5 w-full xl:w-[1120px] mx-auto">
  <nav class="flex flex-row gap-x-10 opacity-80">
    <a href="#top"
      class="transition-all duration-200 hover:text-white hover:scale-110"
      style="transition: text-shadow 0.2s;"
      onmouseover="this.style.textShadow='0 0 20px #fff, 0 0 40px #fff, 0 0 60px #fff';"
      onmouseout="this.style.textShadow='none';"
    >Inicio</a>
    <a href="#proyectos"
      class="transition-all duration-200 hover:text-white hover:scale-110"
      style="transition: text-shadow 0.2s;"
      onmouseover="this.style.textShadow='0 0 20px #fff, 0 0 40px #fff, 0 0 60px #fff';"
      onmouseout="this.style.textShadow='none';"
    >Proyectos</a>
    <a href="#sobre-mi"
      class="transition-all duration-200 hover:text-white hover:scale-110"
      style="transition: text-shadow 0.2s;"
      onmouseover="this.style.textShadow='0 0 20px #fff, 0 0 40px #fff, 0 0 60px #fff';"
      onmouseout="this.style.textShadow='none';"
    >Sobre mi</a>
    <a href="#certificados"
      class="transition-all duration-200 hover:text-white hover:scale-110"
      style="transition: text-shadow 0.2s;"
      onmouseover="this.style.textShadow='0 0 20px #fff, 0 0 40px #fff, 0 0 60px #fff';"
      onmouseout="this.style.textShadow='none';"
    >Certificados</a>
    <a href="#contacto"
      class="transition-all duration-200 hover:text-white hover:scale-110"
      style="transition: text-shadow 0.2s;"
      onmouseover="this.style.textShadow='0 0 20px #fff, 0 0 40px #fff, 0 0 60px #fff';"
      onmouseout="this.style.textShadow='none';"
    >Contacto</a>
  </nav>
</header>