---
import Java from "./icons/Java.astro"
import Spring from "./icons/Spring.astro"
const TAGS = {
  JAVA: {
    name: "Java",
    class: "bg-black text-white",
    icon: Java, 
  },

  SPRING: {
    name: "Spring Boot",
    class: "bg-green-800 text-white",
    icon: Spring,
  },
}
const PROJECTS = [
  {
    title: "Biblioteca Ucompensar",
    description:"Programa para el registro y manejo de la biblioteca por consola, con las funciones de agregar, actualizar, eliminar, buscar y ordenar libros.",
    link: "https://github.com/MAFLIXD/Biblioteca",
    github: "https://github.com/MAFLIXD/Biblioteca",
    image: "/public/projects/svgl.webp",
    tags: [TAGS.JAVA, TAGS.SPRING],
  },
]  
---

{
    PROJECTS.map(({ image, title, description, tags }) => (
        <article>
             <h3 class="text-2xl font-semibold text-emerald-300 mb-3">{title}</h3>
             <p class="text-lg mb-4 text-pretty">{description}</p>
             <ul class="flex gap-x-2 flex-row mb-4">
                {tags.map(tag => (
                    <li>
                      <span class={`flex gap-x-2 rounded-full text-15px ${tag.class} py-1 px-2`}>
                       <tag.icon class="size-6" />
                       {tag.name}
                      </span>
                    </li>
                ))}
             </ul>
             <img 
             class="rounded shadow-2xl shadow-white/15" 
             src={image} 
             alt={`Captura de pantalla del pryecto 1: ${image}`} />
        </article>
    ))
}